(include "./modules/bluetooth.yuck")
(include "./modules/bright.yuck")
(include "./modules/clock.yuck")
(include "./modules/music.yuck")
(include "./modules/net.yuck")
(include "./modules/sys.yuck")
(include "./modules/variables.yuck")
(include "./modules/volume.yuck")
(include "./modules/workspaces.yuck")
(include "./modules/launcher.yuck")
(include "./modules/weather.yuck")
(include "./modules/power.yuck")
(include "./modules/battery.yuck")

(include "./windows/calendar.yuck")
(include "./windows/music.yuck")
(include "./windows/osd.yuck")
(include "./windows/system-menu.yuck")


(defwidget left []
  (box
    :space-evenly false
    :halign "start"
    (launcher)
    (clock_module)
    ))

(defwidget right []
  (box
    :space-evenly false
    :halign "end"
    (bluetooth)
    (net)
    (volume-module)
    (label :class "seperator" :text "|")
    (power-module)
    ))

(defwidget center []
  (box
    :space-evenly false
    :halign "center"
    (pad-left)
    (workspaces)
    (pad-right)))

(defwidget bar []
  (centerbox
    :class "bar"
    (left)
    (center)
    (right)))

(defwindow bar
    :monitor 0
    :geometry (geometry :x "0%"
      :y "0%"
      :width "100%"
      :height "30px"
      :anchor "top center")
    :stacking "fg"
    :exclusive true
  (bar))
